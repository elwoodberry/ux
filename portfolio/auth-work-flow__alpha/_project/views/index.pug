extends ./layouts/default.pug

block content

  .container

    #auth-alpha

      //- BRAND IMAGE
      //- Expects string or image.
      .brand-container nfxn

      .card

        .card-body
          h2 Sign In
          p Create an account for this incredible application.
            a(id="learn-more" href="#") Learn More
          p Already have an account?
            a(id="sign-in" href="#") Sign In

          form(method="post" action="/login")
            .form-group
              label(for="username") Username
              input(type="email" name="username" id="username" class="form-control" placeholder="Username")

            .form-group
              label(for="password") Password
              input(type="password" name="password" id="password" class="form-control" placeholder="Password")

            .form-check
              label(class="form-check-label")
                input(type="checkbox" class="form-check-input")
                span Remember Me

            input(id="create-an-account" type="submit" class="btn btn-primary")

          p By clicking Sign In, you agree to our

          a(id="license-agreement" href="#") Terms of Use
          span and
          a(id="privacy-statement" href="#") Privacy Statement.

          hr

          a(id="license-agreement" href="#") I forgot my username or pasword
          span New to NFXN
          a(id="privacy-statement" href="#") Create an account.


      include ./partials/auth-alpha/footer.pug
